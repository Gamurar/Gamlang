    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/tv_translation" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_word_pictures"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="4dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_to_dict"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_translation">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btn_add_to_dict"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:text="Add to dictionary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_translation"
        app:layout_constraintEnd_toEndOf="@+id/tv_translation"
        app:layout_constraintStart_toStartOf="@+id/tv_translation"
        app:layout_constraintTop_toTopOf="@+id/tv_translation" />

    <ProgressBar
        android:id="@+id/pb_images_loading_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/rv_word_pictures"
        app:layout_constraintEnd_toEndOf="@+id/rv_word_pictures"
        app:layout_constraintStart_toStartOf="@+id/rv_word_pictures"
        app:layout_constraintTop_toTopOf="@+id/rv_word_pictures" />

    <TextView
        android:id="@+id/tv_images_error_msg"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/rv_word_pictures"
        app:layout_constraintEnd_toEndOf="@+id/rv_word_pictures"
        app:layout_constraintStart_toStartOf="@+id/rv_word_pictures"
        app:layout_constraintTop_toTopOf="@+id/rv_word_pictures" />

</androidx.constraintlayout.widget.ConstraintLayout>